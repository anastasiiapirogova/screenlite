{
	"name": "screenlite",
	"type": "module",
	"scripts": {
		"build": "rimraf dist && mkdir dist && npx swc src -d dist --strip-leading-paths && node scripts/fix-imports.js",
		"db:deploy": "npx prisma migrate deploy && npx prisma generate",
		"db:reset": "npx prisma migrate reset && npx prisma generate",
		"dev": "[ -f .env ] && env-cmd -f .env tsx watch src/entrypoints/http.ts || tsx watch src/entrypoints/http.ts",
		"lint": "eslint --fix",
		"cli": "tsx src/entrypoints/cli.ts",
		"start": "node --env-file=.env dist/screenlite.js",
		"test": "vitest --bail=1",
		"env:sync": "node scripts/sync-env-docs.js"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.848.0",
		"@aws-sdk/s3-request-presigner": "^3.848.0",
		"@fastify/cors": "^11.0.1",
		"@fastify/formbody": "^8.0.2",
		"@fastify/helmet": "^13.0.1",
		"@fastify/sensible": "^6.0.3",
		"@prisma/adapter-pg": "^6.12.0",
		"@prisma/client": "^6.12.0",
		"@smithy/node-http-handler": "^4.1.0",
		"@smithy/types": "^4.3.1",
		"async-mutex": "^0.5.0",
		"axios": "^1.10.0",
		"bcrypt": "^6.0.0",
		"bullmq": "^5.56.5",
		"cors": "^2.8.5",
		"fastify": "^5.4.0",
		"fastify-plugin": "^5.0.1",
		"fastify-type-provider-zod": "^5.0.2",
		"glob": "^11.0.3",
		"i18next": "^25.3.2",
		"i18next-fs-backend": "^2.6.0",
		"i18next-http-middleware": "^3.7.4",
		"ioredis": "^5.6.1",
		"mime": "^4.0.7",
		"multer": "^2.0.2",
		"nodemailer": "^7.0.5",
		"pg": "^8.16.3",
		"sharp": "^0.34.3",
		"swagger-jsdoc": "^6.2.8",
		"uuid": "^11.1.0",
		"ws": "^8.18.3",
		"zod": "^4.0.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.31.0",
		"@stylistic/eslint-plugin": "^5.2.1",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.13.1",
		"@types/bcrypt": "^6.0.0",
		"@types/cors": "^2.8.19",
		"@types/multer": "^2.0.0",
		"@types/node": "^24.0.15",
		"@types/nodemailer": "^6.4.17",
		"@types/pg": "^8.15.4",
		"@types/supertest": "^6.0.3",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/tmp": "^0.2.6",
		"@types/uuid": "^10.0.0",
		"@types/ws": "^8.18.1",
		"env-cmd": "^10.1.0",
		"eslint": "^9.31.0",
		"globals": "^16.3.0",
		"prisma": "^6.12.0",
		"rimraf": "^6.0.1",
		"supertest": "^7.1.3",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0",
		"vitest": "^3.2.4"
	},
	"prisma": {
		"schema": "./prisma"
	}
}
